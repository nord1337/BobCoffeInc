@model BobCoffeInc.Models.ForumModels.CoffeCategories

@{
    ViewBag.Title = "CreateCategory";
}


<div class="container my-3">
    <div class="col-12">
        <h2 class="h4 text-white bg-dark mb-3 p-4 rounded">Create Category</h2>
        <form method="post" class="mb-3">
            <div class="form-group">
                <label>Category: </label>
                <select id="Titles" name="MainTitle" class="dropdown">
                    @foreach (var Coffe in ViewBag.CoffeCategories)
                    {
                    <option class="dropdown-item-text">@Coffe</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label>Title:</label>
                <input type="text" class="form-control" name="Title"  />

            </div>
            <input type="hidden" name="Author" value="@User.Identity.Name"/>
            <input type="hidden" name="Created" value="@DateTime.Now" />
            <button type="submit" class="btn btn-primary">Create</button>
        </form>
    </div>
</div>
